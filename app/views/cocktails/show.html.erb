
<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 padded">
      <div class="card-show">
        <div class = "image-show" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= cl_image_path @cocktail.photo %>');" >
        </div>
        <div class="card-show-name text-center">
          <h2> <%= @cocktail.name.capitalize %></h2>
        </div>
        <div class="card description text-center">
          <ul>
            <% @cocktail.doses.each do |dose| %>
            <li> <%=  dose.description + " - " + dose.ingredient.name %> <%= link_to '', dose_path(dose), method: :delete, class: 'fa fa-times dose-delete' %>  </li>
            <% end %>
            <li> <%= link_to 'Add elements to recipe', edit_cocktail_path(@cocktail) %> </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

